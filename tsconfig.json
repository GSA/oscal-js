{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "target": "ES2019",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rootDir": "./src/",
    "allowJs": true,
    "skipLibCheck":true,
    "noImplicitAny": false,
    "declaration": true,
    "declarationDir": "./dist"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "exclude": ["node_modules", "features/", "examples", "dist"]
}