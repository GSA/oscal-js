{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "target": "ES2015",
    "outDir": "./dist",
    "resolveJsonModule":true,
    "rootDir": "./",
    "allowJs": true,
    "noImplicitAny": false
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["features/**/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules"]
}